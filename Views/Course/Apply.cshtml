@model Candidate
<div class="display-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="Email" class="mb-1" for=""></label>
        <input asp-for="Email" class="form-control" type="text">
    </div>

    <div class="form-group my-2">
        <label asp-for="FirstName" class="mb-1" for=""></label>
        <input asp-for="FirstName" class="form-control" type="text">
    </div>

    <div class="form-group my-2">
        <label asp-for="LastName" class="mb-1" for=""></label>
        <input asp-for="LastName" class="form-control" type="text">
    </div>

    <div class="form-group my-2">
        <label asp-for="Age" class="mb-1" for="">Age</label>
        <select asp-for="Age" class="form-control" name="Age" id="">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>

    <fieldset class="mb-2 border p-3">
        <legend class="w-auto">Select One Course</legend>
        <p>
            <input class="form-check-input" type="radio" asp-for="SelectedCourse" id="mvc" value="ASP.NET Core MVC" checked>
            <label for="">ASP.NET Core MVC</label>
        </p>
        <p>
            <input class="form-check-input" type="radio" asp-for="SelectedCourse" id="mvc" value="ASP.NET Core API">
            <label for="">ASP.NET Core API</label>
        </p>
        <p>
            <input class="form-check-input" type="radio" asp-for="SelectedCourse" id="mvc" value="Blazor">
            <label for="">Blazor</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Home</a>
    </div>
</form>